				<label for="number">Contact No.</label>
				<input id="number" type="tel" name="tel" />
			</div>

			<hr>

			<label for="inquiry">Inquiry</label>
			<textarea id="inquiry" rows="3" name="inquiry"></textarea>
		
			<div id="recaptcha_div"></div>
			<div id="notice"></div>

			<input type="submit" class="button" value="Inquire" />
		</form>
	</article>
